# ==============================================================================
# MCP Agent System - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ------------------------------------------------------------------------------
# Service Ports
# ------------------------------------------------------------------------------
MCP_SERVER_PORT=3333
USER_DETAILS_PORT=8001
WHATSAPP_BOT_PORT=5000
AGENT_PROXY_PORT=8000

# ------------------------------------------------------------------------------
# Ollama Configuration (for local LLM)
# ------------------------------------------------------------------------------
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# ------------------------------------------------------------------------------
# LLM API Keys
# ------------------------------------------------------------------------------
# Anthropic (Claude) - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Default LLM Provider (0=Ollama, 1=Anthropic, 2=OpenAI)
DEFAULT_LLM_PROVIDER=1

# ------------------------------------------------------------------------------
# Twilio Configuration (for WhatsApp bot)
# ------------------------------------------------------------------------------
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_SANDBOX_CODE=join learn-is

# ------------------------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_DIR=logs
